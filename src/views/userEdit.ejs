<!-- HEAD -->
<%- include('./partials/head') %>
<!-- HEADER -->
<%- include('./partials/header') %>

<section class="container">
    <div class="row" style="width: 100%;">
        <div class="col-12 col-sm-8 py-3 my-3">
        <strong><h2 style="text-decoration: underline; color: white;" class="text-center"><i class="far fa-play-circle"></i>Editar:</h2></strong>
            <form action="/users/<%= user.id %>/edit/?_method=PUT" enctype="multipart/form-data" name="formUserEdit" method="POST" class="form-horizontal w-100 py-3 my-3 formUserEdit">
                <div class="form-group col-sm-10">
                    <label for="firstName" class="control-label text-light">Nombre:</label>
                    <input type="text" class="form-control firstName userEdit" id="firstName" name="firstName" value=<%=user.firstName %> placeholder="Nombre" required>
                    <small class="errorFirstName error">El NOMBRE es obligatorio, debe contener letras y debe ser mayor a 2 caracteres.</small>
                </div>
                <div class="form-group col-sm-10">
                    <label for="lastName" class="control-label text-light">Apellido:</label>
                    <input type="text" class="form-control lastName userEdit" id="lastName" name="lastName" value=<%=user.lastName %> placeholder="Apellido" required>
                    <small class="errorLastName error">El APELLIDO es obligatorio, debe contener letras y debe ser mayor a 2 caracteres.</small>
                </div>
                <div class="form-group col-sm-10">
                    <label for="email" class="control-label text-light">Email:</label>
                    <input type="email" class="form-control email userEdit" id="email" name="email" placeholder="example@example.com" value=<%=user.email %> >
                    <small class="errorEmail error">El EMAIL es obligatorio, no debe contener espacios, debe ser menor a 35 caracteres y formato v√°lido.</small>
                </div>
                <div class="col-12 col-md-6 form-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input avatar userEdit" name="avatar" max="1" id="avatar" accept="image/x-png,image/gif,image/jpeg" required>
                        <label class="custom-file-label" for="avatar">Cambiar avatar</label>
                        <small class="errorAvatar error"></small>
                    </div>
                </div>
                <div class="form-group d-flex justify-content-between">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-secondary btn-sm w-100 my-3">Aplicar cambios</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- FOOTER -->
<%- include('./partials/footer') %>